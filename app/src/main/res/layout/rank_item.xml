<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/rank_profile_img"
        android:layout_width="109dp"
        android:layout_height="0dp"
        android:src="@drawable/img_splash"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ranking_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:lineSpacingExtra="6sp"
        android:gravity="center"
        android:fontFamily="@font/noto"
        android:textFontWeight="400"
        app:layout_constraintEnd_toEndOf="@+id/rank_profile_img"
        app:layout_constraintStart_toStartOf="@+id/rank_profile_img"
        app:layout_constraintTop_toBottomOf="@+id/rank_profile_img" />


</androidx.constraintlayout.widget.ConstraintLayout>